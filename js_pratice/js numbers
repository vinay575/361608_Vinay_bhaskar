    document.write(b+"<br>")
//tofixed
    var x = 10.97685;
    x.toFixed()
    document.write("hello"+x+"<br>")
    var x = 10.97685;
    b=x.toFixed(2)
    document.write(b+"<br>")
    var x = 10.97685;
    b=x.toFixed(4)
    document.write(b+"<br>")
    //toPrecision
    var x = 10.97685;
    x.toPrecision()
