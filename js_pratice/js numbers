    var a = 99999999999999;
    var b =9999999999999999; 
      document.write(a+"<br>")
      document.write(b+"<br>")
    
    //floating points are not accurate so 
    var a = 0.2 + 0.1; 
    document.write(a+"<br>")
        //alternative is *10 for each number and / by 10 
        var a = (0.2*10 + 0.1*10)/10; 
    document.write(a+"<br>")
    // string numbers
    var a = 10;
    var b = 20;
    var z = "The result is: " + a + b;
    document.write(z+"<br>")

    var a = "10";
    var b = "20";
    var z =   a /b
    document.write(z+"<br>")
    var a = 10;
    var b = "20";
    var z =   a /b
    document.write(z+"<br>")
